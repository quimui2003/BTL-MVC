<div class="login_box">
    <div class="close-login1">X</div>
    <div class="login-header">
        <span>Register</span>
    </div>
    <form id="loginForm">
        <div class="input_box">
            <input type="text" id="user" class="input-field" required>
            <label for="user" class="label">Email</label>
            <i class="bx bx-user icon"></i>
        </div>
        <div class="input_box">
            <input type="password" id="pass" class="input-field" required>
            <label for="pass" class="label">Mật khẩu</label>
            <i class="bx bx-lock-alt icon"></i>
        </div>
        <div class="input_box">
            <input type="password" id="pass2" class="input-field" required>
            <label for="pass" class="label">Nhập lại mật khẩu</label>
            <i class="bx bx-lock-alt icon"></i>
        </div>
        <div class="error-login" id="error-login"></div>

        <div class="input_box">
            <input type="submit" class="input-submit" value="Đăng ký">
        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#loginForm').submit(function (event) {
            event.preventDefault();
            var email = $('#user').val();
            var password = $('#pass').val();
            var password2 = $('#pass2').val();
            $.ajax({
                url: '@Url.Action("XuLyRegister", "Login")',
                type: 'POST',
                data: {
                    email: email,
                    passWord: password,
                    passWord2: password2
                },
                success: function (result) {
                    if (result.success) {
                        window.location.href = result.redirectUrl;
                    } else {
                        $('#error-login').text(result.message);
                    }
                },
                error: function (xhr, status, error) {
                    $('#error-login').text('Đã xảy ra lỗi, vui lòng thử lại.');
                }
            });
        });
    });
</script>

