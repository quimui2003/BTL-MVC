<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Areas/Admin/CSSAd/Admin.css" rel="stylesheet" />
</head>
<body>
    <div id="mySidenav">
        <div class="sidenav">
            <p class="logo"><span>MT</span>-Medical</p>
            <a href="@Url.Action("Index", "Admin")" class="icon-a" target="iframe-page"><img src="imageBTL/controlpanel.png" alt="menu" class="icons"><span>Dashboard</span></a>
            <a href="@Url.Action("Orders", "Admin")" class="icon-a" target="iframe-page"><img src="imageBTL/shoppingbag.png" alt="menu" class="icons"><span>Orders</span></a>
            <a href="@Url.Action("Products", "Admin")" class="icon-a" target="iframe-page"><img src="imageBTL/bullet-list.png" alt="menu" class="icons"><span>Products</span></a>
            <a href="@Url.Action("Accounts", "Admin")" class="icon-a" target="iframe-page"><img src="imageBTL/user.png" alt="menu" class="icons"><span>Accounts</span></a>
            <a href="@Url.Action("Settings", "Admin")" class="icon-a" target="iframe-page"><img src="imageBTL/settings.png" alt="menu" class="icons"><span>Settings</span></a>
            <form action="Accounts_edit.php" method="post" id="dx">
                <img src="imageBTL/logout.png" alt="menu" class="icons">
                <input type="submit" name="logout" value="Logout" class="dangxuat">
            </form>
        </div>
    </div>
    <div id="main">
        <div class="head">
            <div class="col-div-6">
                <span class="nav" style="font-size: 30px; cursor: pointer; color: black;">&#9776; @ViewBag.Title</span>
                <span class="nav2" style="font-size: 30px; cursor: pointer; color: black;">&#9776; @ViewBag.Title</span>
            </div>
            <div class="col-div-6">
                <form action="SEARCH.php" method="post">
                    <input type="text" placeholder="Search here..." style="width: 300px; height: 30px;"><button name="search"><img src="imageBTL/search.png" style="width: 30px;"></button>
                </form>
            </div>
            @Html.Action("Profiles", "Admin")
            <div class="clearfix"></div>
        </div>

        <div class="page">
            <div>
                @RenderBody()
            </div>
        </div>
        @*<iframe src="Dashboard.php" frameborder="0" name="iframe-page" class="page"></iframe>*@
        <div class="clearfix"></div>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
    $(".nav").click(function(){
        $("#mySidenav").css('width', '70px');
        $("#main").css('margin-left', '70px');
        $(".sidenav").css('width', '90px');
        $(".logo").css('visibility', 'hidden');
        $(".logo span").css('visibility', 'visible');
        $(".logo span").css('margin-left', '-15px');
        $(".icon-a span").css('visibility', 'hidden');
        $(".icon-a").css('margin-top', '-15px');
        $(".icons").css('visibility', 'visible');
        $(".dangxuat").css('padding-left', '90px');
        $(".nav").css('display', 'none');
        $(".nav2").css('display', 'block');
    });

    $(".nav2").click(function(){
        $("#mySidenav").css('width', '300px');
        $("#main").css('margin-left', '300px');
        $(".sidenav").css('width', '300px');
        $(".logo").css('visibility', 'visible');
        $(".logo span").css('visibility', 'visible');
        $(".logo span").css('margin-left', '0px');
        $(".icon-a span").css('visibility', 'visible');
        $(".icon-a").css('margin-top', '0px');
        $(".icons").css('visibility', 'visible');
        $(".dangxuat").css('padding-left', '78px');
        $(".nav").css('display', 'block');
        $(".nav2").css('display', 'none');
    });
    </script>
</body>
</html>
